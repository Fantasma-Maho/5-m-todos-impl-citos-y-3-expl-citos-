<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:padding="20dp">

    <TextView
        android:id="@+id/tvCamaraFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sección de Cámara"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <Button
        android:id="@+id/btnAbrirCamaraDesdeFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Abrir cámara"
        android:backgroundTint="@color/brand_primary"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tvCamaraFragment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
